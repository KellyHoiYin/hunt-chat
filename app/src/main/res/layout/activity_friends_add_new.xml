<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelly.hunt_chat.Friends_add_new">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/friends_add_tabbed_0"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="@color/lightGrey"/>

        <EditText
            android:id="@+id/friends_add_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friends_add_tabbed_0"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:focusable="true"/>

        <View
            android:id="@+id/friends_add_tabbed_1"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/friends_add_input"
            android:background="@color/lightGrey"/>

        <RelativeLayout
            android:id="@+id/friends_add_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friends_add_tabbed_1"
            android:padding="10dp">

            <ImageView
                android:id="@+id/friends_add_profile_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/friends_add_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_toRightOf="@+id/friends_add_profile_pic"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/friends_add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/add"
                android:background="@color/lightGrey"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:padding="0dp"
                />

            <TextView
                android:id="@+id/friends_add_username_not_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username_does_not_exist"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_centerVertical="true"
                android:textAlignment="center"/>

        </RelativeLayout>

        <View
            android:id="@+id/friends_add_tabbed_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/friends_add_layout"
            android:background="@color/lightGrey"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
